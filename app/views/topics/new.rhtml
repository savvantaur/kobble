<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to 'Discussion', discussion_path %> <span class="arrow">&rarr;</span>
  <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
</div>

<h1 id="new_topic">
	New Conversation
	<% unless @topic.subject.nil? %>
		about <%= link_to @topic.subject.name, :controller => @topic.subject.class.to_s.downcase.pluralize, :action => 'show' %>
	<% end %>
</h1>

<p class="subtitle">started by <%= current_user.name %></p>

<%= error_messages_for :topic %>

<% form_for :topic,
     :url  => topics_path(@forum) do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag 'Post Topic' %> or <%= link_to('Cancel', forum_path(@forum)) %>
<% end -%>

<%= javascript_tag "$('topic_title').focus();" %>

