<% @title = "Start a conversation <span class=\"headernote\">about #{@referent.name}</span>" %>

<% content_for :buttons do %>
  <div class="formbuttons">
    <%= submit_tag 'Preview topic' %> or 
    <%= link_to 'cancel', url_for(@referent), {:class => 'cancelform'} %>
  </div>
<% end %>

<% content_for :admin do %>
  <p>
    back to <%= link_to 'fragments list', nodes_url %>
  </p>
<% end %>

<div class="mainform">

  <% form_for ([@referent, @topic]) do |f| %>

    <%= render :partial => 'form', :locals => {:f => f} %>

  <% end %>

</div>

