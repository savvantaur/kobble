<% 
  column = (current_account.users.count / 3).ceil
  counter = 0
%>

<table>
  <thead>
    <tr>
      <td colspan="3">
        <label for="monitors">Notification (of conversation and any responses)</label>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr> 
      <td>
        <p class="minorfield">
    	    <% current_account.users.each do |user| %>
    	      <%= check_box_tag 'monitors[]', user.id, user == current_user, {:id => "monitor_#{user.id}"} %> <%= user == current_user ? "<strong>you</strong>" : user.name %><br />
    	      <%
    	        counter += 1
    	        if counter % column == 0
    	      %>
    	        </p></td><td><p class="minorfield">
          <% end %>
    	  <% end %>
  	  </p></td>
	  </tr>
  </tbody>
</table>
