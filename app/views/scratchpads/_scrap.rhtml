<% name = scrap.name.nil? || scrap.name.size == 0 ? "nameless #{scrap.class.nice_title}" : scrap.name %>

<li 
  id="pad_<%= pad.id %>_<%= scrap.class.to_s.downcase %>_<%= scrap.id %>" 
  class="<%= scrap.class.to_s.downcase %> draggable expandable"
  title="<%= scrap.class.nice_title %>: <%= name %>"
>
  <%= link_to( scrap.name, {:controller => scrap.class.to_s.downcase.pluralize, :action => 'show', :id => scrap}, {:class => 'listed'}) %>
  <div class="tiptext"><%= truncate( scrap.find_some_text, 300 ) %></div>
</li>