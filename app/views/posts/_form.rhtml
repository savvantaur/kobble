<%= hidden_field_tag :dispatch, 'preview', :class => 'routing' %>

<p>
  <% if @post.errors.on(:body) %>
    <label for="post_body" class="formerror">Your message</label> <span class="errordetail"><%= @post.errors.on(:body) %></span><br />
  <% else %>
    <label for="post_body">Your message</label><br />
  <% end %>
  <%= f.text_area :body, :rows => 14, :class => "standard fillWithSelection pickme #{'witherror' if @post.errors.on(:body)}" %><br />
</p>

<%= yield :buttons %>
