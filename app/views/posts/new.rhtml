<div class="post preview">
	<h3 class="postheader">
  	<img src="/images/furniture/spoke/pink/user.png" width="16" height="15" alt="Post">
		<%= h(@post.creator.name) %>
		<span class="when">preview</span>
	</h3>

	<%= @post.body.formatted %>

	<% form_for([@topic, @post]) do |f| -%>

		<%= f.hidden_field :body %>

		<div class="waitme">
	    <%= submit_tag 'confirm' %> or <%= link_to "revise message", '#', :class => 'revise message' %>
	  </div>

	<% end -%>
</div>
