<% 
  @title = @tag.name 
%>

<div class="preamble">
  <% if @tag.description %>
    <%= @tag.description.formatted %>
  <% else %>
    <p class="pale">We don't have a summary for this tag yet.</p>
  <% end %>
</div>

<div class="boxtabs">
  <a href="#" id="tab_content_tagged" class="tab">tagged items</a>
  <a href="#" id="tab_content_topics" class="tab">discussions</a>
  <% if @tag.has_image? %><a href="#" id="tab_content_image" class="tab">image</a><% end %>
  <% if @tag.has_notes? %><a href="#" id="tab_content_notes" class="tab">field notes</a><% end %>
</div>

<div class="boxed" id="box_content">
  <div id="content_tagged">
    <h2 class="boxhead">tagged items</h2>

    <div class="mainlist">
      <% if @tag.taggables.count > 0 %>
      <p>This tag has been applied to:</p>
      	<ul 
      	  id="tagged_tag_<%= @tag.id %>"
      	  class="catcher"
      	  catches="<%= @tag.can_catch.join(',') %>"
      	>
      		<%= render :partial => 'shared/listed', :collection => @tag.taggables.uniq, :locals => {:catch => false} %>
      	</ul>
      <% else %>
        <p class="pale">This tag hasn't been used yet.</p>
      <% end %>
    </div>
  </div>

  <%= render :partial => 'shared/show_topics', :locals => {:item => @tag, :tabset => 'content'} %>
  
  <%= render :partial => 'shared/show_image', :locals => {:item => @tag, :tabset => 'content'} %>
  <%= render :partial => 'shared/show_field_notes', :locals => {:item => @tag, :tabset => 'content'} %>

</div>