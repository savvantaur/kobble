<h1>People</h1>

<div class="boxtabs">
  <a href="#" id="tab_content_everyone" class="tab">everyone</a>
  <% current_collection.user_groups.each do |ug| %>
    <a href="#" id="tab_content_group<%= ug.id %>" class="tab"><%= ug.name %></a>
  <% end %>
</div>

<div class="boxed" id="box_content">

  <div id="content_everyone">
    <div id="listing">
    	<% if @users && @users.size > 0 %>
        <h2 class="boxhead"><%= pluralize(@users.size, 'Person') %> in total</h2>
      	<%= render :partial => 'list', :collection => @users %>
    	<% else %>
    		<p>There are no people to display in this collection</p>
    	<% end %>
    </div>
  </div>

  <% current_collection.user_groups.each do |ug| %>
    <div id="content_group<%= ug.id %>">
      <h2 class="boxhead"><%= ug.name %>: <%= pluralize(ug.users.count, 'Member') %></h2>
      
    	<% if ug.users.count > 0 %>
    	  <%= render :partial => 'list', :collection => ug.users %>
    	<% else %>
    	  <p>There's nobody in this group</p>
  	  <% end %>

      <%= render :partial => 'shared/show_admin', :locals => {:item => ug} %>

    </div>

  <% end %>
  
</div>