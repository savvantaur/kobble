<div class="pagination">
  found: <span class="current"><%= pluralize @search.total_entries, 'item' %></span><br />
  show as:
  <%= link_to_unless_current 'list', :action => 'list', :page => params[:page], :q => params[:q], :among => params[:among], :collection => params[:collection], :creator => params[:creator] %> &middot;
  <%= link_to_unless_current 'gallery', :action => 'gallery', :page => params[:page], :q => params[:q], :among => params[:among], :collection => params[:collection], :creator => params[:creator] %><br />
  <%= will_paginate @search, :prev_label => 'previous', :next_label => 'next', :separator => ' &middot; ', :container => false %><br />
</div>
