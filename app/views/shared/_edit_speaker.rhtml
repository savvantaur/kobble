<% @spoken = item %>

<a href="#" class="displaycontrol" id="show_speaker">+ <%= @spoken.new_record? ? 'choose or create' : 'amend' %> speaker</a>

<div id="hide_speaker" class="slideable">
	<label for="node_speaker_id">Primary speaker<br />
	  <%= select("node", "speaker_id", @current_collection.users.collect{|u| [u.name, u.id] }, {:include_blank => true}, {:class => 'standard'}) %></label><br />
	<%= link_to "create a new speaker", '#' %>

</div>
