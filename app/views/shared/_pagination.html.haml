- if list
  .pagination
    The
    = link_to current_collection.name, url_for (current_collection)
    collection has 
    %span.current
      = pluralize list.total_entries, @klass ? @klass.nice_title : 'item'
      %br
      = will_paginate list, :prev_label => 'previous', :next_label => 'next', :separator => ' &middot; ', :container => false

