- item ||= @thing

.summary
  = render :partial => 'shared/thumbnail', :locals => {:draggable => true}
  - if item.respond_to?('collection') && item.collection
    Collection: 
    = link_to item.collection.name, url_for(item.collection)
  - if item.respond_to?('speaker') && item.speaker
    Speaker: 
    = link_to item.speaker.name, url_for(item.speaker)
  - if item.respond_to?('source') && item.source
    Source: 
    = link_to item.source.name, url_for(item.source)
  - if item.respond_to?('occasion') && item.occasion
    Occasion:
    = link_to item.occasion.name, url_for(item.occasion)
  - if item.created_by
    Added by:
    = link_to item.created_by.name, url_for(item.created_by)
  - if item.updated_by
    Last updated by:
    = link_to item.updated_by.name, url_for(item.updated_by)
