<% tabset ||= '' %>
<div id="<%= tabset %>_topics">
	<ul class="starry">
	<% if item.has_topics? %>
		<%= render :partial => "topics/minilist", :collection => item.topics %>
	<% end %>
	<li class="add"><%= link_to "start a conversation about this #{item.class.to_s.downcase}", {:controller => 'topics', :action => 'new', :subject_type => item.class.to_s, :subject_id => item.id} %></li>
</ul>
</div>
