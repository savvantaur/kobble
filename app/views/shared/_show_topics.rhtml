<% 
  item ||= @thing 
  topics ||= item.topics
  hide_new_discussion_link ||= false
  blocktitle ||= 'discussion'
%>

<h3 class="pagesection">
  <a href="#" class="squeezebox">
    <%= blocktitle %> 
    <span class="headernote">
      <%= pluralize(topics.length, 'conversation') %>
    </span>
  </a>
</h3>

<div id="source_discussions" class="squeezed">
  <div class="mainlist">
  	<ul id="topiclist">
      <%= render :partial => 'shared/listed', :collection => topics %>
  	</ul>
  </div>
	<% unless hide_new_discussion_link %>
	  <p><%= link_to "start a conversation", item_new_topic_url(item), {:id => 'discussion_extend_topiclist', :class => 'inlinediscuss'} %></p>
  <% end %>
</div>

