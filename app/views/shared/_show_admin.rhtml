<% if editor? %>
	<h2>
		<a href="#" class="displaycontrol editor" id="show_admin">+ admin</a>
	</h2>
  <div class="marginal" id="hide_admin">
		<%= link_to "edit", {:controller => item.class.to_s.downcase.pluralize, :action => 'edit', :id => item}, {:class => 'edititem'} %>
		<%= link_to "remove", {:controller => item.class.to_s.downcase.pluralize, :action => 'destroy', :id => item}, {:class => 'removeitem', :confirm => "do you really want to completely get rid of #{item.name}?"} %>
		<%= link_to "add another", {:controller => item.class.to_s.downcase.pluralize, :action => 'new'}, {:class => 'additem'} %>
	</div>
<% end %>
