- item ||= @thing

%h3.pagesection
  %a{:href => "#", :class => "squeezebox"}
    tags 
    %span.headernote
      = pluralize(item.tags.count, 'tag')

#source_tags.squeezed
  .wordlist
    %ul{:id => "collection_#{current_collection.id}_#{item.class.to_s.downcase}_#{item.id}_taggings", :class => "catcher taglist", :catches => "tag", :title => "tag list for #{item.name}"}
      = render :partial => 'components/tagging_list', :locals => {:item => item}
    %p.listnote
      /link_to "Edit tag list", edit_tags_url_for(item), :class => 'inplace'
      drag and drop tags in and out of the space above

