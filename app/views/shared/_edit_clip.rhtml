<div class="formpart<%= ' witherrors' if item.errors.on(:clip) %> notinline">
  <label for="<% item.class.to_s.downcase %>_clip">Audio or video file</label><br />
  <%= f.file_field :clip, :class => 'noborder' %>
  <% if item.errors.on(:clip) %><br />
    This <%= item.errors.on(:clip).to_a.to_sentence %>
  <% end %>
  <% if item.has_clip? %><br />
	  <span class="formnote">current clip is <%= item.clip_file_name %>, uploaded <%= item.clip_updated_at.to_date %></span>
  <% end %>
</div>
