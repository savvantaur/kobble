<% 
  item ||= @thing 
  @item_with_file = item
%>

<p class="downloadlink">
  <%= link_to image_tag("/images/furniture/icons/#{@item_with_file.filetype}.gif"), url_for_file_column('item_with_file', "file") %> 
  <%= link_to File.basename(@item_with_file.file_relative_path), url_for_file_column('item_with_file', "file") %>
</p>

<% 
  @item_with_file = nil
%>
