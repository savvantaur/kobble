<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
        "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html>
<head>
  <title>Spoke</title>
  <script type="text/javascript" src="/js/mootools.js"></script>
  <script type="text/javascript" src="/js/extensions.js"></script>
  <script type="text/javascript" src="/js/spoke.js"></script>
  <link rel="stylesheet" href="/stylesheets/spoke.css" type="text/css" />
</head>
<body>

  <div id="canvas">
   
    <%= @content_for_layout %>

  </div>

  <div id="mastfoot" class="fixedbottom">
    <div id="logo" class="hideondrag">
      <a href="/"><img src="/images/furniture/layout/sparklogo.png" width="49" height="39" alt="sparknow" /></a>
    </div>  
          
	  <div id="navigation">
      <% [Collection, Source, Node, Bundle, User, Tag].each do |klass| %>
        <%= link_to klass.nice_title.pluralize, {:controller => klass.to_s.underscore.pluralize}, {:class => (request.parameters[:controller] == klass.to_s.underscore.pluralize ? "fg" : '')} %>
      <% end %>
      <%= link_to 'log out', {:controller => 'account', :action => 'logout'}, {:class => 'action'} %>
    	<div id="preferences">
    	  <input type="checkbox" id="showDetails" name="showDetails" value="1" class="spokepref"> <label for="showDetails">float details</label>
    	  <input type="checkbox" id="confirmDrops" name="confirmDrops" value="1" class="spokepref"> <label for="confirmDrops">confirm drops</label>
    	</div>
      <div id="notification">
        <%= flash[:notice] %>
      </div>  
    </div>
  </div> 

  <div id="scratchpad" class="fixedbottom">
    <div id="headbox_scratchpad">
      <% for pad in @scratch %>
        <a href="#" class="padtab" id="tab_scratchpad_<%= pad.id %>"><%= pad.name %></a>
      <% end %>
      <a href="#" class="padtab minor" id="tab_scratchpad_collections">collections</a>
    </div>
    <div id="box_scratchpad">
      <%= render :partial => 'shared/scratchpad', :collection => @scratch %>
      <div id="scratchpad_collections" class="scratchpage">
        collection list
      </div>    
    </div>
  </div>
 
  <% if editor? %>
    <div id="trash" class="trashdrop showondrag fixedbottom" id="trashcan" catches="all">
      &nbsp;
    </div>  
  <% end %>
  
</body>
</html>