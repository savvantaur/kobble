
<p>
  <label for="topic_title">Title</label><br />
  <%= form.text_field :name, :class => "titular", :tabindex => 10 %>
</p>

<% if @topic.new_record? %>
	<p>
	  <label for="topic_body">Your opening remarks</label><br />
	  <%= form.text_area :body, :rows => 12, :tabindex => 20, :class => 'standard' %>
	</p>
<% end %>
